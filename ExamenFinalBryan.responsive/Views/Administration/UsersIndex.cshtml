@model UserViewModel

<style>



    .header {
        margin-bottom: 20px;
    }



        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }



    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }



    .inputs {
        margin-top: 25px;
    }



        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }



        .inputs #submit {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>



<div class="form-row">
    <div class="form-group col-8">
        <div class="form-group header">
            <h3>Usuarios</h3>
        </div>



        <div class="form-group">
            <div class="clearfix separator"></div>
        </div>



        @foreach (var user in Model.Users)
        {
            <div id="user_@user.Id" class="input-group inputs">
                <div class="col-3">@user.Email</div>
                <div class="col-5 text-right">
                    <a class="btn btn-outline-light" asp-action="UsersRoleNewView" asp-route-id="@user.Id">
                        <i class="fa-solid fa-users"></i>Roles
                    </a>
                </div>
            </div>
        }



        <br>
        <br>
        <a id="roles" class="btn btn-outline-light" asp-action="Index">
            <i></i>Roles Asignacion
        </a>



    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

